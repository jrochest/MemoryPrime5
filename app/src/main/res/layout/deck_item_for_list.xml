<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/deck_name"
        android:layout_width="176dp"
        android:layout_height="96dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toStartOf="@+id/new_note_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/learn_button"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginEnd="1dp"
        android:text="Study"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/new_note_button"
        tools:layout_editor_absoluteY="1dp" />

    <Button
        android:id="@+id/new_note_button"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginEnd="1dp"
        android:text="New Note"
        app:layout_constraintEnd_toStartOf="@+id/learn_button"
        app:layout_constraintStart_toEndOf="@+id/deck_name"
        app:layout_constraintTop_toTopOf="@+id/learn_button" />
</androidx.constraintlayout.widget.ConstraintLayout>